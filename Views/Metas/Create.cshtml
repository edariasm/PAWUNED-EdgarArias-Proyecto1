@model PAWUNED_EdgarArias_Proyecto1.Models.Meta

@{
    ViewData["Title"] = "Create";
}

@inject IHttpContextAccessor HttpContextAccessor

@{
    var userID = HttpContextAccessor.HttpContext.Session.GetString("id");
}



<script type="text/javascript" src="~/js/funciones.js"></script>

<link href="/css/Styles.css" rel="stylesheet" type="text/css">

<h1>Registar nueva meta</h1>

<h4>Registro de Meta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="IdMetaSalud" class="control-label"></label>
                <input asp-for="IdMetaSalud" class="form-control" />
                <span asp-validation-for="IdMetaSalud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario" ></select>
               @*  <span asp-validation-for="IdUsuario" class="form-control" value="@userID">@userID</span> *@
               
            </div>
            <div class="form-group">
                <label asp-for="TipoMeta" class="control-label"></label>
                <select asp-for="TipoMeta" class="form-control" id="TipoMeta">
                    <option value="">Seleccionar un tipo de meta</option>
                    <option value="PerderPeso">Perder peso</option>
                    <option value="GanarMusculo">Aumentar masa muscular</option>
                    <option value="MejorarTiempos">Mejorar tiempo de carrera</option>
                    <option value="Mantenimiemto">Mantener las marcas actuales</option>
                </select>
                <span asp-validation-for="TipoMeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PesaObjetivo" class="control-label"></label>
                <input asp-for="PesaObjetivo" class="form-control" />
                <span asp-validation-for="PesaObjetivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaObjetivo" class="control-label"></label>
                <input asp-for="FechaObjetivo" type="date" class="form-control" />
                <span asp-validation-for="FechaObjetivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelActividad" class="control-label"></label>
                <select asp-for="NivelActividad" class="form-control" id="NivelActividad">
                    <option value="">Seleccionar un Nivel de actividad</option>
                    <option value="Moderado">Moderado</option>
                    <option value="Alto">Alto</option>
                    <option value="Muy alto">Muy alto</option>
                </select>
                <span asp-validation-for="NivelActividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjetivosEspecificos" class="control-label"></label>
                <input asp-for="ObjetivosEspecificos" class="form-control" />
                <span asp-validation-for="ObjetivosEspecificos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
